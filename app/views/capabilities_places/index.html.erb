<h1 align = "center">Listing capabilities_places</h1>

<table class="centering">
  <tr>
    <th>Capability</th>
    <th>Place</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @capabilities_places.each do |capabilities_place| %>
  <tr>
    <td><%= (Capability.find_by_id(capabilities_place.capability_id)).cap_name%></td>
    <td><%= (Place.find_by_id(capabilities_place.place_id)).placename %></td>
    <td><%= link_to 'Show', capabilities_place %></td>
    <td><%= link_to 'Edit', edit_capabilities_place_path(capabilities_place) %></td>
    <td><%= link_to 'Destroy', capabilities_place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

